<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span id="js-pkmn-name">Feraligtr</span>
          <small id="js-pkmn-number">#160</small>
          <img id="js-pkmn-image" src="" alt="">
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Height</dt>
          <dd id="js-pkmn-weight">23</dd>

          <dt>Weight</dt>
          <dd id="js-pkmn-height">888</dd>
          <hr>
          <h4>Stats</h4>
          <dt>HP</dt>
          <dd id="js-pkmn-hp">888</dd>
          <dt>Attack & defense</dt>
          <dd id="js-pkmn-ad">888</dd>
          <dt>SPECIAL Attack & defense</dt>
          <dd id="js-pkmn-sp">888</dd>
          <dt>Speed</dt>
          <dd id="js-pkmn-speed">888</dd>
          <hr>
          <dt>Type</dt>
          <dd id="js-pkmn-type">888</dd>
        </dl>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->
